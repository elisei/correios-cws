<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="O2TI\SigepWebCarrier\Api\PlpRepositoryInterface">
        <method name="addOrderToPlp">
            <argument name="plpId" xsi:type="string">int</argument>
            <argument name="orderId" xsi:type="string">string</argument>
        </method>
        <method name="updateOrderStatus">
            <argument name="plpId" xsi:type="string">int</argument>
            <argument name="orderId" xsi:type="string">string</argument>
            <argument name="status" xsi:type="string">string</argument>
            <argument name="errorMessage" xsi:type="string">string</argument>
            <argument name="shipmentId" xsi:type="string">string</argument>
        </method>
        <method name="updateOrderCollectedData">
            <argument name="plpId" xsi:type="string">int</argument>
            <argument name="orderId" xsi:type="string">string</argument>
            <argument name="collectedData" xsi:type="string">string</argument>
        </method>
        <method name="updateOrderProcessingData">
            <argument name="plpId" xsi:type="string">int</argument>
            <argument name="orderId" xsi:type="string">string</argument>
            <argument name="processingData" xsi:type="string">string</argument>
        </method>
        <method name="updateOrderCollectionStatus">
            <argument name="plpId" xsi:type="string">int</argument>
            <argument name="orderId" xsi:type="string">string</argument>
            <argument name="collectionStatus" xsi:type="string">string</argument>
        </method>
        <method name="updateOrderProcessingStatus">
            <argument name="plpId" xsi:type="string">int</argument>
            <argument name="orderId" xsi:type="string">string</argument>
            <argument name="processingStatus" xsi:type="string">string</argument>
        </method>
        <method name="transitionStatus">
            <argument name="plpId" xsi:type="string">int</argument>
            <argument name="newStatus" xsi:type="string">string</argument>
            <argument name="message" xsi:type="string">string</argument>
        </method>
    </type>
</config>