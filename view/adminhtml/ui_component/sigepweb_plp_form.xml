<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sigepweb_plp_form.plp_form_data_source</item>
            <item name="deps" xsi:type="string">sigepweb_plp_form.plp_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">PLP Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">sigepweb_plp_form</item>
            <item name="component" xsi:type="string">O2TI_SigepWebCarrier/js/form/plp-form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="reset" class="Magento\Backend\Block\Widget\Button\Generic">
                <param name="label" xsi:type="string">Reset</param>
                <param name="onclick" xsi:type="string">location.reload();</param>
                <param name="class" xsi:type="string">reset</param>
                <param name="sort_order" xsi:type="string">20</param>
            </button>
            <button name="save" class="Magento\Backend\Block\Widget\Button\Generic">
                <param name="label" xsi:type="string">Save</param>
                <param name="class" xsi:type="string">save primary</param>
                <param name="data_attribute" xsi:type="array">
                    <item name="mage-init" xsi:type="array">
                        <item name="button" xsi:type="array">
                            <item name="event" xsi:type="string">save</item>
                        </item>
                    </item>
                </param>
                <param name="sort_order" xsi:type="string">30</param>
            </button>
            <button name="save_and_continue" class="Magento\Backend\Block\Widget\Button\Generic">
                <param name="label" xsi:type="string">Save and Continue Edit</param>
                <param name="class" xsi:type="string">save</param>
                <param name="data_attribute" xsi:type="array">
                    <item name="mage-init" xsi:type="array">
                        <item name="button" xsi:type="array">
                            <item name="event" xsi:type="string">saveAndContinueEdit</item>
                        </item>
                    </item>
                </param>
                <param name="sort_order" xsi:type="string">40</param>
            </button>
        </buttons>
        <namespace>sigepweb_plp_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>sigepweb_plp_form.plp_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="plp_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">O2TI\SigepWebCarrier\Model\Plp\DataProvider</argument>
            <argument name="name" xsi:type="string">plp_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">PLP Information</item>
                <item name="collapsible" xsi:type="boolean">false</item>
            </item>
        </argument>
        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">entity_id</item>
                </item>
            </argument>
        </field>
        <field name="store_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Store\Model\System\Store</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">plp</item>
                    <item name="dataScope" xsi:type="string">store_id</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
        </field>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">O2TI\SigepWebCarrier\Model\Plp\Source\Status</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">plp</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="default" xsi:type="string">open</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="can_add_orders">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Allow Adding Orders</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">plp</item>
                    <item name="dataScope" xsi:type="string">can_add_orders</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="can_remove_orders">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Allow Removing Orders</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">plp</item>
                    <item name="dataScope" xsi:type="string">can_remove_orders</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="can_close">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Allow Closing PLP</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">plp</item>
                    <item name="dataScope" xsi:type="string">can_close</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                </item>
            </argument>
        </field>
        <fieldset name="associated_orders">
            <settings>
                <label translate="true">Associated Orders</label>
                <collapsible>false</collapsible>
                <opened>true</opened>
            </settings>
            <insertListing name="sigepweb_plp_order_listing">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="autoRender" xsi:type="boolean">true</item>
                        <item name="dataScope" xsi:type="string">sigepweb_plp_order_listing</item>
                        <item name="ns" xsi:type="string">sigepweb_plp_order_listing</item>
                        <item name="externalProvider" xsi:type="string">sigepweb_plp_order_listing.sigepweb_plp_order_listing_data_source</item>
                        <item name="selectionsProvider" xsi:type="string">sigepweb_plp_order_listing.sigepweb_plp_order_listing.plp_order_columns.ids</item>
                        <item name="render_url" xsi:type="url" path="mui/index/render"/>
                        <item name="realTimeLink" xsi:type="boolean">true</item>
                        <item name="dataLinks" xsi:type="array">
                            <item name="imports" xsi:type="boolean">true</item>
                            <item name="exports" xsi:type="boolean">false</item>
                        </item>
                    </item>
                </argument>
            </insertListing>
        </fieldset>
        <fieldset name="orders">
            <settings>
                <label translate="true">Orders</label>
                <collapsible>false</collapsible>
                <opened>true</opened>
            </settings>
            <container name="orders_container">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Orders</item>
                    </item>
                </argument>
                <insertListing name="sales_order_grid">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="autoRender" xsi:type="boolean">true</item>
                            <item name="dataScope" xsi:type="string">sales_order_grid</item>
                            <item name="ns" xsi:type="string">sales_order_grid</item>
                            <item name="externalProvider" xsi:type="string">sales_order_grid.sales_order_grid_data_source</item>
                            <item name="selectionsProvider" xsi:type="string">sales_order_grid.sales_order_grid.sales_order_columns.ids</item>
                            <item name="render_url" xsi:type="url" path="mui/index/render"/>
                            <item name="realTimeLink" xsi:type="boolean">true</item>
                            <item name="dataLinks" xsi:type="array">
                                <item name="imports" xsi:type="boolean">true</item>
                                <item name="exports" xsi:type="boolean">true</item>
                            </item>
                            <item name="behaviourType" xsi:type="string">simple</item>
                            <item name="clientConfig" xsi:type="array">
                                <item name="selectionsProvider" xsi:type="string">sales_order_grid.sales_order_grid.sales_order_columns.ids</item>
                                <item name="provider" xsi:type="string">sales_order_grid.sales_order_grid_data_source</item>
                                <item name="deps" xsi:type="array">
                                    <item name="0" xsi:type="string">sales_order_grid.sales_order_grid_data_source</item>
                                </item>
                            </item>
                            <item name="indexField" xsi:type="string">entity_id</item>
                            <item name="preserveSelectionsOnFilter" xsi:type="boolean">true</item>
                            <item name="updateSelection" xsi:type="boolean">true</item>
                            <item name="deferredLoading" xsi:type="boolean">true</item>
                            <item name="selected" xsi:type="array"/>
                            <item name="selectedData" xsi:type="array">
                                <item name="provider" xsi:type="string">sales_order_grid.sales_order_grid.sales_order_columns.ids</item>
                                <item name="field" xsi:type="string">entity_id</item>
                            </item>
                            <item name="initialSelectionProvider" xsi:type="string"/>
                        </item>
                    </argument>
                </insertListing>
            </container>
        </fieldset>
    </fieldset>
</form>